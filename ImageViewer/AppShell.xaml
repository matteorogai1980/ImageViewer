<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ImageViewer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:ImageViewer.Helpers"
    xmlns:local="clr-namespace:ImageViewer.Views"
    xmlns:viewmodels="clr-namespace:ImageViewer.ViewModels"
    xmlns:lang="clr-namespace:ImageViewer.Localizations"
    x:DataType="viewmodels:BaseViewModel"
    Shell.FlyoutBehavior="Disabled">
    <ShellContent
        Title="{x:Static lang:AppLanguage.SearchPageTitle}"
        ContentTemplate="{DataTemplate local:SearchPage}"
        Route="SearchPage" />
    
</Shell>
